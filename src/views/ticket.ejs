<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link rel="stylesheet" href="/vendor/bootstrap.css">
	<link rel="stylesheet" href="/vendor/bootstrap-icons.css">

	<link rel="stylesheet" href="/css/style.css">

	<title>Digi-Ticket Helpdesk</title>
</head>

<body class="d-flex flex-column h-100">
	<%- include('./parts/header') %>

	<main class="container mt-5">
		<h1 class="fw-bold text-center">
			<i class="bi bi-ticket-perforated"></i>
			Ticket # <%- ticket.TicketID %>
			<i class="bi bi-ticket-perforated"></i>
		</h1>
		<div class="row">
			<div class="col">
				<div class="list-group">
					<div class="list-group-item d-flex justify-content-between align-items-start">
						<div class="ms-2 me-auto">
							<div class="fw-bold">Deparment</div>
							<%- ticket.DeparmentName %>
						</div>
					</div>
					<div class="list-group-item d-flex justify-content-between align-items-start">
						<div class="ms-2 me-auto">
							<div class="fw-bold">Subject</div>
							<%- ticket.Subject %>
						</div>
					</div>
					<div class="list-group-item d-flex justify-content-between align-items-start">
						<div class="ms-2 me-auto">
							<div class="fw-bold">Support</div>
							<%- ticket.SupportName || "Not assigned" %>
						</div>
					</div>
					<div class="list-group-item d-flex justify-content-between align-items-start">
						<div class="ms-2 me-auto">
							<div class="fw-bold">Status</div>
							<span class="badge text-bg-<%- ticket.Status == 1 ? "primary" : ticket.Status == 2 ? "primary" : ticket.Status == 3 ? "success" : ticket.Status == 4 ? "warning" : ticket.Status == 5 ? "secondary" : "danger" %>">
								<%- ticket.StatusFormat %>
							</span>
						</div>
					</div>
				</div>
			</div>
			<div class="col-sm-8 mb-3">
				<div class="row justify-content-center">
					<% for (var message of messages) { %>
					<div class="alert alert-light">
						<div class="row mb-3 fw-bold">
							<div class="col-md-6 text-start">
								<i class="bi bi-person"></i> <%- message.UserName %>
							</div>
							<div class="col-md-6 text-end">
								<i class="bi bi-calendar4-event"></i> <%- message.CreationFormat %>
							</div>
						</div>
						<hr>
						<div class="">
							<%- message.Text %>
						</div>
					</div>
					<% } %>
				</div>
			</div>
		</div>
	</main>

	<%- include('./parts/footer') %>

	<script src="/vendor/bootstrap.js"></script>
</body>

</html>